generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Post {
  id Int @id @default(autoincrement()) @unique
  title String @unique
  comments Comment[]
  createdAt DateTime @default(now())
}

model Comment {
  id Int @id @default(autoincrement())
  postId Int
  post Post @relation(fields: [postId], references: [id])
  username String
  message String
  createdAt DateTime @default(now())
}
